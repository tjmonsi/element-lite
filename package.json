{
  "name": "@littleq/element-lite",
  "version": "0.1.7",
  "description": "A take on using lit-html and polymer's properties-mixin",
  "main": "dist/element-lite.cjs.js",
  "module": "element-lite.js",
  "browser": "dist/element-lite.umd.js",
  "scripts": {
    "size": "./node_modules/.bin/size-limit",
    "copy": "./copy.sh",
    "semistandard": "./node_modules/.bin/semistandard",
    "wct": "npm run pretest && ./node_modules/.bin/wct --npm",
    "wct-firefox": "./node_modules/.bin/wct --npm --configFile wct-firefox.conf.json",
    "wct-prod": "./node_modules/.bin/wct --npm --configFile wct-prod.conf.json",
    "wct-sauce": "./node_modules/.bin/wct --npm --configFile wct-sauce.conf.json",
    "wct-sauce-ie": "./node_modules/.bin/wct --npm --configFile wct-sauce-ie.conf.json",
    "test": "npm run semistandard && npm run size && npm run wct-prod",
    "build": "npm run copy && ./node_modules/.bin/rollup -c",
    "pretest": "npm run build",
    "postinstall": "npm run copy",
    "prepublishOnly": "npm run copy && npm test"
  },
  "files": [
    "element-lite-base.js",
    "element-lite-lit-only.js",
    "element-lite-static-shadow.js",
    "element-lite.js",
    "lib",
    "lib/lit-html/**",
    "dist"
  ],
  "bundledDependencies": [
    "lit-html"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tjmonsi/element-lite.git"
  },
  "keywords": [
    "webcomponents"
  ],
  "author": "TJ Monserrat <tonijanmonserrat@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tjmonsi/element-lite/issues"
  },
  "homepage": "https://github.com/tjmonsi/element-lite#readme",
  "flat": true,
  "size-limit": [
    {
      "path": "element-lite-lit-only.js",
      "limit": "3KB"
    },
    {
      "path": "element-lite-base.js",
      "limit": "3.5KB"
    },
    {
      "path": "element-lite-static-shadow.js",
      "limit": "3.5KB"
    },
    {
      "path": "element-lite.js",
      "limit": "5.6KB"
    }
  ],
  "semistandard": {
    "parser": "babel-eslint",
    "ignore": [
      "test/*",
      "dist/*",
      "polyfills/*"
    ],
    "env": [
      "mocha"
    ]
  },
  "dependencies": {
    "@webcomponents/shadycss": "^1.1.1",
    "@webcomponents/webcomponentsjs": "^1.1.0",
    "es6-symbol": "^3.1.1",
    "lit-html": "^0.9.0"
  },
  "devDependencies": {
    "@polymer/iron-test-helpers": "0.0.3",
    "babel-eslint": "8.2.2",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.1",
    "chai": "4.1.2",
    "eslint": "4.16.0",
    "eslint-config-semistandard": "12.0.1",
    "eslint-config-standard": "11.0.0-beta.0",
    "eslint-plugin-chai-friendly": "0.4.1",
    "eslint-plugin-html": "3.2.2",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-mocha": "4.12.1",
    "eslint-plugin-node": "5.2.1",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-standard": "3.0.1",
    "lodash": "3.10.1",
    "mocha": "5.0.4",
    "rollup": "0.57.0",
    "rollup-plugin-babel": "3.0.3",
    "rollup-plugin-buble": "0.19.2",
    "rollup-plugin-commonjs": "9.1.0",
    "rollup-plugin-node-resolve": "3.2.0",
    "rollup-plugin-uglify": "3.0.0",
    "semistandard": "12.0.1",
    "size-limit": "0.16.1",
    "wct-browser-legacy": "0.0.1-pre.11",
    "web-component-tester": "6.5.0"
  }
}
