{
  "name": "@littleq/element-lite",
  "version": "0.3.8",
  "description": "A take on using lit-html and polymer's properties-mixin",
  "browser": "dist/element-lite.umd.js",
  "scripts": {
    "size": "./node_modules/.bin/size-limit",
    "semistandard": "./node_modules/.bin/semistandard",
    "wct-c9": "export DISPLAY=:99.0 && xvfb-run npm run wct",
    "wct": "npm run pretest && ./node_modules/.bin/wct --npm",
    "wct-firefox": "./node_modules/.bin/wct --npm --configFile wct-firefox.conf.json",
    "wct-prod": "./node_modules/.bin/wct --npm --configFile wct-prod.conf.json",
    "wct-sauce": "./node_modules/.bin/wct --npm --configFile wct-sauce.conf.json",
    "wct-sauce-ie": "./node_modules/.bin/wct --npm --configFile wct-sauce-ie.conf.json",
    "test": "npm run semistandard && npm run size && npm run wct-prod",
    "build": "./node_modules/.bin/rollup -c",
    "pretest": "npm run build",
    "prepublish": "npm run build"
  },
  "files": [
    "properties-lite.js",
    "observers-lite.js",
    "object-accessors-lite.js",
    "array-accessors-lite.js",
    "template-lite.js",
    "element-lite.js",
    "lib",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tjmonsi/element-lite.git"
  },
  "keywords": [
    "webcomponents"
  ],
  "author": "TJ Monserrat <tonijanmonserrat@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tjmonsi/element-lite/issues"
  },
  "homepage": "https://github.com/tjmonsi/element-lite#readme",
  "flat": true,
  "size-limit": [
    {
      "path": "properties-lite.js",
      "limit": "2KB"
    },
    {
      "path": "observers-lite.js",
      "limit": "2.5KB"
    },
    {
      "path": "object-accessors-lite.js",
      "limit": "1KB"
    },
    {
      "path": "array-accessors-lite.js",
      "limit": "1KB"
    },
    {
      "path": "template-lite.js",
      "limit": "1KB"
    },
    {
      "path": "element-lite.js",
      "limit": "3.5KB"
    },
    {
      "path": "element.js",
      "limit": "6.5KB"
    }
  ],
  "semistandard": {
    "parser": "babel-eslint",
    "ignore": [
      "test/*",
      "dist/*",
      "polyfills/*",
      "demo/*"
    ],
    "env": [
      "mocha"
    ]
  },
  "dependencies": {
    "@babel/runtime": "7.1.2",
    "@webcomponents/shadycss": "^1.1.1",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "es6-symbol": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/plugin-external-helpers": "7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0",
    "@babel/plugin-transform-runtime": "7.1.0",
    "@babel/preset-env": "7.1.0",
    "@polymer/iron-test-helpers": "3.0.1",
    "babel-eslint": "10.0.0",
    "chai": "4.2.0",
    "eslint": "5.6.1",
    "eslint-config-semistandard": "12.0.1",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-chai-friendly": "0.4.1",
    "eslint-plugin-html": "4.0.6",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-mocha": "5.2.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "4.0.0",
    "eslint-plugin-standard": "3.1.0",
    "lit-html": "^0.11.0",
    "lodash": "^4.17.10",
    "mocha": "5.2.0",
    "rollup": "^0.66.4",
    "rollup-plugin-babel": "4.0.3",
    "rollup-plugin-buble": "0.19.2",
    "rollup-plugin-commonjs": "9.1.8",
    "rollup-plugin-node-resolve": "3.4.0",
    "rollup-plugin-terser": "3.0.0",
    "semistandard": "12.0.1",
    "size-limit": "0.20.1",
    "wct-browser-legacy": "1.0.1",
    "web-component-tester": "^6.8.0"
  }
}
